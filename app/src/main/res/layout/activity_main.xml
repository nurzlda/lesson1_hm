<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc"
    tools:context=".MainActivity">

   <EditText
       android:paddingStart="12dp"
       android:paddingEnd="0dp"
       android:drawableStart="@drawable/ic_email"
       android:id="@+id/edt_txt"
       android:background="@drawable/edt_txt_bc"
       android:textAlignment="center"
       android:hint="@string/email"
       android:textColorHint="@color/white"
       android:layout_marginHorizontal="16dp"
       android:layout_marginTop="64dp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       android:layout_height="56dp" />

   <EditText
       android:paddingEnd="0dp"
       android:paddingStart="12dp"
       android:drawableStart="@drawable/ic_theme"
       android:id="@+id/edt_txt2"
       android:background="@drawable/edt_txt_bc"
       android:textAlignment="center"
       android:hint="@string/theme"
       android:textColorHint="@color/white"
       android:layout_marginHorizontal="16dp"
       android:layout_marginTop="8dp"
       app:layout_constraintTop_toBottomOf="@id/edt_txt"
       android:layout_width="match_parent"
       android:layout_height="56dp"/>

   <EditText
       android:paddingEnd="0dp"
       android:paddingStart="12dp"
       android:drawableStart="@drawable/ic_sms"
       android:id="@+id/edt_txt3"
       android:background="@drawable/edt_txt_bc2"
       android:textAlignment="center"
       android:hint="@string/sms"
       android:textColorHint="@color/white"
       android:layout_marginHorizontal="16dp"
       android:layout_marginTop="8dp"
       app:layout_constraintTop_toBottomOf="@id/edt_txt2"
       android:layout_width="match_parent"
       android:layout_height="56dp"/>

   <Button
       android:id="@+id/btn_send"
       android:background="@drawable/edt_txt_bc"
       android:text="@string/send"
       android:textColor="@color/white"
       android:layout_marginHorizontal="16dp"
       android:layout_marginTop="100dp"
       android:layout_width="match_parent"
       android:layout_height="68dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/edt_txt3" />

</androidx.constraintlayout.widget.ConstraintLayout>